<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>sisuerr</display-name>
	<welcome-file-list>
		<welcome-file>index.xhtml</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>bootstrap</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Production</param-value>
		<!-- <param-value>Development</param-value> -->
	</context-param>
	<!-- required if you want HTML comments mixed in with JSF tags -->
	<context-param>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.FONT_AWESOME</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>bootstrap</param-value>
	</context-param>
	<!-- SeguranÃƒÂ§a -->
	<error-page>
		<error-code>403</error-code>
		<location>/loginerror.xhtml</location>
	</error-page>
	<security-constraint>
		<display-name>AdminConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<description />
			<url-pattern>/sistema/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description />
			<role-name>admin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<description>ssl enabled</description>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>UserConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>userpat</web-resource-name>
			<description />
			<url-pattern>/sistema/sispat/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>userloc</web-resource-name>
			<description />
			<url-pattern>/sistema/sisloc/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description />
			<role-name>admin</role-name>
			<role-name>userpat</role-name>
			<role-name>userloc</role-name>
		</auth-constraint>
		<user-data-constraint>
			<description>ssl enabled</description>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Jdbc_Real</realm-name>
		<form-login-config>
			<form-login-page>/login.xhtml</form-login-page>
			<form-error-page>/loginerror.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<description />
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<description />
		<role-name>userpat</role-name>
	</security-role>
	<security-role>
		<description />
		<role-name>userloc</role-name>
	</security-role>
